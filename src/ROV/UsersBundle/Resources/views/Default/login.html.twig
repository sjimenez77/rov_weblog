{% extends '::frontend_bootstrap.html.twig' %}

{% block title %}{{ 'Sign in'|trans }}{% endblock %}

{% block body %}
	{{ parent() }}
	
	<div class="container">
    	<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Blog <small>{{ 'Sign in'|trans }}</small></h1>
				<ol class="breadcrumb">
					<li><a href="{{ path('home') }}">{{ 'Home'|trans }}</a></li>
					<li class="active">{{ 'Sign in'|trans }}</li>
				</ol>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-12">
				<div class="panel panel-primary">
					<div class="panel-heading">{{ 'Type your email and password to sign in'|trans }}</div>
					<div class="panel-body">
						<form role="form" action="{{ path('rov_users_login_check') }}" method="post">
							{% if error %}
							<div class="alert alert-danger">
								<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
								<strong>{{ 'Warning'|trans }}:</strong> {{ error.message|trans }}
							</div>
							{% endif %}
							{# Flashbag session success messages #}
							{% for message in app.session.flashbag.get('error') %}
							<div class="alert alert-danger"><button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>{{ message|trans }}</div>
							{% endfor %}
							{% for message in app.session.flashbag.get('success') %}
							<div class="alert alert-success"><button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>{{ message|trans }}</div>
							{% endfor %}
							<div class="form-group">
								<label for="username">{{ 'Email address'|trans }}</label>
								<input type="email" class="form-control" id="username" name="_username" placeholder="{{ 'Type your email'|trans }}">
							</div>
							<div class="form-group">
								<label for="password">{{ 'Password'|trans }}</label>
								<input type="password" class="form-control" id="password" name="_password" placeholder="{{ 'Type your password'|trans }}">
							</div>
							<div class="checkbox">
								<label>
									<input type="checkbox" id="remember_me" name="_remember_me"> {{ 'Remember me'|trans }}
								</label>
							</div>
							<button type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i> {{ 'Sign in'|trans }}</button>
							<a href="{{ path('rov_users_new_password') }}" class="btn btn-info pull-right">{{ 'Have you forgotten your password?'|trans }}</a>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
	<br>
{% endblock %}