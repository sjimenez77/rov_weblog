{% extends '::frontend_bootstrap.html.twig' %}

{% block title %}Portada{% endblock %}

{% block body %}
	{{ parent() }}
	
	<div class="container">
    	<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Blog <small>Contacto</small></h1>
				<ol class="breadcrumb">
					<li><a href="{{ path('home') }}">{{ 'Portada'|trans }}</a></li>
					<li class="active">Contacto</li>
				</ol>
			</div>
		</div>

		<div class="row">

			<div class="col-lg-12">
				<div class="panel panel-primary">
					<div class="panel-heading">{{ 'Rellene el siguiente formulario de contacto'|trans }}</div>
					<div class="panel-body">
						<form role="form">
							<div class="form-group">
								<label for="email">{{ 'Dirección de correo electrónico'|trans }}</label>
								<input type="email" class="form-control" id="email" name="email" placeholder="{{ 'Escriba su email'|trans }}">
							</div>
							<div class="form-group">
								<label for="subject">{{ 'Asunto'|trans }}</label>
								<input type="text" class="form-control" id="subject" name="subject" placeholder="{{ 'Escriba el asunto de su mensaje'|trans }}">
							</div>
							<div class="form-group">
								<label for="message">{{ 'Asunto'|trans }}</label>
								<textarea class="form-control" rows="5" id="message" name="message"></textarea>
							</div>
							<button type="submit" class="btn btn-default">{{ 'Enviar'|trans }}</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
	<br>
{% endblock %}