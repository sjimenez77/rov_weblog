{% extends '::frontend_bootstrap.html.twig' %}

{% block title %}Portada{% endblock %}

{% block body %}
	{{ parent() }}
	
	<div class="container">
    	<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Blog <small>Contacto</small></h1>
				<ol class="breadcrumb">
					<li><a href="{{ path('home') }}">{{ 'Portada'|trans }}</a></li>
					<li class="active">Contacto</li>
				</ol>
			</div>
		</div>

		<div class="row">

			<div class="col-lg-12">
				<div class="panel panel-primary">
					{# Flashbag session success messages #}
					{% for message in app.session.flashbag.get('error') %}
					<div class="alert alert-error">{{ message|trans }}.</div>
					{% endfor %}
					{% for message in app.session.flashbag.get('success') %}
					<div class="alert alert-success">{{ message|trans }}.</div>
					{% endfor %}
					<div class="panel-heading">{{ 'Please fill out this form in order to cantact with me'|trans }}</div>
					<div class="panel-body">
						{{ form_widget(contact_form) }}
					</div>
				</div>
			</div>
		</div>
	</div>
	<br>
{% endblock %}