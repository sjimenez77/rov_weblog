<!-- New Winery Modal -->
<div class="modal fade" id="newWinery" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			{{ form_start(new_winery_form, {'method': 'POST', 'action': path('rov_blog_manage_wines') }) }}
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				<h4 class="modal-title" id="myModalLabel">{{ 'Add a new winery'|trans }}</h4>
			</div>
			<div class="modal-body">
				<div class="form-group">{{ form_row(new_winery_form.name) }}</div>
				<div class="form-group">{{ form_row(new_winery_form.region) }}</div>
				<div class="form-group">{{ form_row(new_winery_form.address) }}</div>
				<div class="form-group">{{ form_row(new_winery_form.location) }}</div>
				<div class="form-group">{{ form_row(new_winery_form.postal) }}</div>
				<div class="form-group">{{ form_row(new_winery_form.phone) }}</div>
				<div class="form-group">{{ form_row(new_winery_form.email) }}</div>
				<div class="form-group">{{ form_row(new_winery_form.web) }}</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">{{ 'Close'|trans }}</button>
				<button type="submit" class="btn btn-primary">{{ 'Save changes'|trans }}</button>
			</div>
			{{ form_end(new_winery_form) }}
		</div>
	</div>
</div>