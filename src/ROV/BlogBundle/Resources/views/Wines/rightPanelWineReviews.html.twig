{# Right panel full #}
<div class="col-lg-4">
	<div class="well">
		{{ form_start(form_search, {'method': 'POST', 'action': path('rov_blog_wine_search') }) }}
		<h4>{{ 'Wines search'|trans }}</h4>
		<div class="input-group">
			{{ form_widget(form_search.search) }}
			<span class="input-group-btn">
				<button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
			</span>
		</div><!-- /input-group -->
		{{ form_end(form_search) }}
	</div><!-- /well -->
	<div class="well">
		<h4>{{ 'Regions'|trans }}</h4>
		<div class="row">
			{% set length = regions|length %}
			{% if length > 0 %}
			<div class="col-xs-6">
				<ul class="list-unstyled">
					{% for region in regions|slice(0, (length / 2)|round) %}
					<li><a href="{{ path('rov_blog_wine_region', { 'slug': region.slug })}}">{{ region.name|trans }}</a></li>
					{% endfor %}
				</ul>
			</div>
			<div class="col-xs-6">
				<ul class="list-unstyled">
					{% for region in regions|slice((length / 2)|round, length) %}
					<li><a href="{{ path('rov_blog_wine_region', { 'slug': region.slug })}}">{{ region.name|trans }}</a></li>
					{% endfor %}
				</ul>
			</div>
			{% else %}
			<div class="col-lg-12">
				<p>{{ 'There are no regions yet'|trans }}</p>
			</div>
			{% endif %}
		</div>
		{% if is_granted('ROLE_ADMIN') %}
		<!-- Button trigger modal -->
		<button class="btn btn-primary btn-block" data-toggle="modal" data-target="#newRegion" style="margin-bottom:5px">{{ 'Add a new region'|trans }}</button>
		{% endif %}
	</div><!-- /well -->
	<div class="well">
		<h4>{{ 'Wineries'|trans }}</h4>
		<div class="row">
			{% set length = wineries|length %}
			{% if length > 0 %}
			<div class="col-xs-6">
				<ul class="list-unstyled">
					{% for winery in wineries|slice(0, (length / 2)|round) %}
					<li><a href="{{ path('rov_blog_wine_winery', { 'slug': winery.slug })}}">{{ winery.name|trans }}</a></li>
					{% endfor %}
				</ul>
			</div>
			<div class="col-xs-6">
				<ul class="list-unstyled">
					{% for winery in wineries|slice((length / 2)|round, length) %}
					<li><a href="{{ path('rov_blog_wine_winery', { 'slug': winery.slug })}}">{{ winery.name|trans }}</a></li>
					{% endfor %}
				</ul>
			</div>
			{% else %}
			<div class="col-lg-12">
				<p>{{ 'There are no wineries yet'|trans }}</p>
			</div>
			{% endif %}
		</div>
		{% if is_granted('ROLE_ADMIN') %}
		<!-- Button trigger modal -->
		<button class="btn btn-info btn-block" data-toggle="modal" data-target="#newWinery" style="margin-top:5px">{{ 'Add a new winery'|trans }}</button>
		{% endif %}
	</div><!-- /well -->
	{% if is_granted('ROLE_ADMIN') %}
	<!-- New Category Modal -->
	<div class="modal fade" id="newRegion" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				{{ form_start(new_region_form, {'method': 'POST', 'action': path('rov_blog_manage_wines') }) }}
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					<h4 class="modal-title" id="myModalLabel">{{ 'Add a new region'|trans }}</h4>
				</div>
				<div class="modal-body">
					{{ form_row(new_region_form.country) }}
					{{ form_row(new_region_form.name) }}
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">{{ 'Close'|trans }}</button>
					<button type="submit" class="btn btn-primary">{{ 'Save changes'|trans }}</button>
				</div>
				{{ form_end(new_region_form) }}
			</div>
		</div>
	</div>
	<!-- New Tag Modal -->
	<div class="modal fade" id="newWinery" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				{{ form_start(new_winery_form, {'method': 'POST', 'action': path('rov_blog_manage_wines') }) }}
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					<h4 class="modal-title" id="myModalLabel">{{ 'Add a new winery'|trans }}</h4>
				</div>
				<div class="modal-body">
					{{ form_row(new_winery_form.name) }}
					{{ form_row(new_winery_form.region) }}
					{{ form_row(new_winery_form.address) }}
					{{ form_row(new_winery_form.location) }}
					{{ form_row(new_winery_form.postal) }}
					{{ form_row(new_winery_form.phone) }}
					{{ form_row(new_winery_form.email) }}
					{{ form_row(new_winery_form.web) }}
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">{{ 'Close'|trans }}</button>
					<button type="submit" class="btn btn-primary">{{ 'Save changes'|trans }}</button>
				</div>
				{{ form_end(new_winery_form) }}
			</div>
		</div>
	</div>
	{% endif %}
	<div class="panel panel-primary">
		<div class="panel-heading">
			<h4 class="panel-title">{{ 'Wine reviews in the last months'|trans }}</h4>
		</div>
		<div class="panel-body">
			<div class="col-xs-12">
				<p>{{ 'Click in any month to see the wine reviews published in that date'|trans }}</p>
				<div class="list-group">
					{% for groupMonth in wineReviewsMonth %}
					<a href="{{ path('rov_blog_wine_date', { 'year': groupMonth.year, 'month': groupMonth.month }) }}" class="list-group-item">
						<span class="badge">{{ groupMonth.total }}</span>
						{{ (groupMonth.year ~ '-' ~ groupMonth.month ~ '-' ~ '01')|date('F')|trans }} {{ groupMonth.year }} 
					</a>
					{% endfor %}
				</div>
			</div>
		</div>
		<div class="panel-footer">{{ 'For older wine reviews you can use the search engine'|trans }}</div>
	</div>
</div>
