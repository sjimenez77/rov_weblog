<div class="well">
	<h4>{{ 'Wineries'|trans }}</h4>
	<div class="row">
		{% set length = wineries|length %}
		{% if length > 0 %}
		<div class="col-xs-6">
			<ul class="list-unstyled">
				{% for winery in wineries|slice(0, (length / 2)|round) %}
				<li><a href="{{ path('rov_blog_wine_winery', { 'slug': winery.slug })}}">{{ winery.name|trans }}</a></li>
				{% endfor %}
			</ul>
		</div>
		<div class="col-xs-6">
			<ul class="list-unstyled">
				{% for winery in wineries|slice((length / 2)|round, length) %}
				<li><a href="{{ path('rov_blog_wine_winery', { 'slug': winery.slug })}}">{{ winery.name|trans }}</a></li>
				{% endfor %}
			</ul>
		</div>
		{% else %}
		<div class="col-lg-12">
			<p>{{ 'There are no wineries yet'|trans }}</p>
		</div>
		{% endif %}
	</div>
	{% if is_granted('ROLE_ADMIN') %}
	<!-- Button trigger modal -->
	<button class="btn btn-info btn-block" data-toggle="modal" data-target="#newWinery" style="margin-top:5px">{{ 'Add a new winery'|trans }}</button>
	{% endif %}
</div><!-- /well -->