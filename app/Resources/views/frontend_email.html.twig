{% extends '::base_email.html.twig' %}

{% block content %}
	{% block header %}
	<tr>
        <td class="container-padding" bgcolor="#772953" style="background-color: #772953; padding-left: 30px; padding-right: 30px; font-size: 13px; line-height: 20px; font-family: Helvetica, sans-serif; color: #fff;" align="left">
        	<br>
            <img src="{{ app.request.host }}{{ asset('images/logo_exp.png') }}" alt="{{ appname }}">
		</td>
	</tr>
    {% endblock %}

	<tr>
        <td class="container-padding" bgcolor="#772953" style="background-color: #772953; padding-left: 30px; padding-right: 30px; font-size: 13px; line-height: 20px; font-family: Helvetica, sans-serif; color: #fff;" align="left">
        	<div style="font-weight: bold; font-size: 18px; line-height: 24px; color: #DDD;">
        		<br>
        		{##### EMAIL SUBJECT #####}
        		{% block subject %}{% endblock %}
        	</div>
        	<p>{% block message %}{% endblock %}</p>
            <br>
		</td>
	</tr>

	{% block footer %}
	<tr>
        <td class="container-padding" bgcolor="#772953" style="background-color: #772953; padding-left: 30px; padding-right: 30px; font-size: 13px; line-height: 20px; font-family: Helvetica, sans-serif; color: #fff;" align="left">
        	<div style="font-weight: bold; font-size: 18px; line-height: 24px; color: #DDD; border-top: 1px solid #ddd;">
        		<br>
        		{##### CONTACT DATA #####}
        		{{ 'Contact data'|trans }}
        	</div>
        	<p>
        		<strong>{% block name %}{% endblock %}</strong>
        		<br>
        		<a style="font-weight: bold; color: #DDD;" href="mailto:{% block email %}{% endblock %}">{% block emailshow %}{% endblock %}</a>
        	</p>
        	<div style="font-weight: bold; font-size: 10px; line-height: 24px; color: #DDD; border-top: 1px solid #ddd;">
        		<br>
        		{##### EMAIL FOOTER #####}
        		{{ 'Email sent by'|trans }} {{ appname }}
        	</div>
		</td>
	</tr>
	{% endblock %}
{% endblock %}