{% extends '::base.html.twig' %}

{% block lang %}{{ app.request.locale }}{% endblock %}
{% block title %}{% endblock %}

{% block meta %}
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta name="description" content="Rainbow Cloud es un generador de aplicaciones en la nube">
    <meta name="author" content="Logic Computers y Abada Soft">
{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('bundles/rovstart/css/bootstrap.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/rovstart/css/main.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/rovstart/css/bootstrap-responsive.css') }}" rel="stylesheet">
{% endblock %}

{% block ie %}
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
{% endblock %}

{% block icons %}
    <!-- Fav and touch icons -->
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="{{ asset('bundles/rovstart/ico/apple-touch-icon-144-precomposed.png') }}">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="{{ asset('bundles/rovstart/ico/apple-touch-icon-114-precomposed.png') }}">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="{{ asset('bundles/rovstart/ico/apple-touch-icon-72-precomposed.png') }}">
    <link rel="apple-touch-icon-precomposed" href="{{ asset('bundles/rovstart/ico/apple-touch-icon-57-precomposed.png') }}">
    <link rel="shortcut icon" href="{{ asset('bundles/rovstart/ico/favicon.png') }}">
{% endblock %}

{% block body %}{% endblock %}

{% block javascripts %}
    <!-- load jQuery -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
	<script src="{{ asset('bundles/rovstart/js/bootstrap.min.js') }}"></script>
    <script>
      !function ($) {
        $(function(){
          // carousel demo
          $('#myCarousel').carousel()
        })
      }(window.jQuery)
    </script>
	<script src="{{ asset('bundles/rovstart/js/holder.js') }}"></script>
{% endblock %}